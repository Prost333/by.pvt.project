<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                      https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0"
         metadata-complete="true">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>by.pvt.project.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserRegistration</servlet-name>
        <servlet-class>by.pvt.project.servlets.UserRegistration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegistration</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GoodRegistration</servlet-name>
        <servlet-class>by.pvt.project.servlets.GoodRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoodRegistration</servlet-name>
        <url-pattern>/goodreg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>admin</servlet-name>
        <jsp-file>/goodRegistration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>by.pvt.project.servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/adminS</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>basket</servlet-name>
        <jsp-file>/basket.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>basket</servlet-name>
        <url-pattern>/basket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminServletF</servlet-name>
        <servlet-class>by.pvt.project.servlets.AdminServletFunction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServletF</servlet-name>
        <url-pattern>/AdminServletF</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BasketServlet</servlet-name>
        <servlet-class>by.pvt.project.servlets.BasketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BasketServlet</servlet-name>
        <url-pattern>/basketServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteOrder</servlet-name>
        <servlet-class>by.pvt.project.servlets.DeleteOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteOrder</servlet-name>
        <url-pattern>/DeleteOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>completionBasket</servlet-name>
        <jsp-file>/completionBasket.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>completionBasket</servlet-name>
        <url-pattern>/completionBasket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BasketServletFinish</servlet-name>
        <servlet-class>by.pvt.project.servlets.BasketServletFinish</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BasketServletFinish</servlet-name>
        <url-pattern>/basketServletFinish</url-pattern>
    </servlet-mapping>



    <filter>
        <filter-name>authenfication</filter-name>
        <filter-class>by.pvt.project.filter.Authentication</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenfication</filter-name>
        <url-pattern>/goodRegistration.jsp/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>authenfication</filter-name>
        <url-pattern>/AdminServlet/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>authenfication</filter-name>
        <url-pattern>/goodreg/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>authenfication</filter-name>
        <url-pattern>/AdminServletF/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>authenfication</filter-name>
        <url-pattern>/goodMenu/*</url-pattern>
    </filter-mapping>
</web-app>